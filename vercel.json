{
    "version": 2,
    "builds": [
        {
            "src": "server/app.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "server/app.js"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "build": {
        "env": {
            "NODE_VERSION": "14" 
        }
    }
}